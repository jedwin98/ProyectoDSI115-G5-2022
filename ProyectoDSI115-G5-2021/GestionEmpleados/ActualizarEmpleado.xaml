<Window x:Class="ProyectoDSI115_G5_2021.GestionEmpleados.ActualizarEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDSI115_G5_2021.GestionEmpleados"
        mc:Ignorable="d"
        Title="ActualizarEmpleado" Height="419.492" Width="669.386" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Rectangle Fill="#FFC91029" Height="61" Stroke="Black" VerticalAlignment="Top"/>
        <Label Content="Administración de Empleados" HorizontalAlignment="Left" Margin="37,10,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Comic Sans MS" FontWeight="Bold" Foreground="White"/>
        <Label Content="Acciones disponibles" HorizontalAlignment="Left" Margin="19,69,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Comic Sans MS" Foreground="#FF0E0E0E" Width="194"/>
        <Label Content="Elige la Opción que deseas realizar" Margin="0,67,20,0" VerticalAlignment="Top" FontSize="18" FontFamily="Comic Sans MS" Foreground="#FF0E0E0E" HorizontalAlignment="Right" Width="300"/>

        <Rectangle Margin="200,108,20,20" Stroke="Black"/>
        <Label Content="Actualizar Empleado" HorizontalAlignment="Left" Margin="225,94,0,0" VerticalAlignment="Top" Background="White"/>

        <Label Content="ID Empleado:" HorizontalAlignment="Left" Margin="225,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.641,0.269"/>
        <TextBox x:Name="txtId" IsEnabled="False" TextWrapping="Wrap" Text="" Margin="400,130,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="224"/>
        <Label Content="Nombres del Empleado:" HorizontalAlignment="Left" Margin="225,165,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNombre" MaxLength="50" TextWrapping="Wrap" Text="" Margin="400,165,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="223"/>
        <Label Content="Apellidos del Empleado:" HorizontalAlignment="Left" Margin="225,200,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtApellido" MaxLength="50" TextWrapping="Wrap" Text="" Margin="400,200,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="223"/>
        <Label Content="Fecha de Contratación:" HorizontalAlignment="Left" Margin="225,235,0,0" VerticalAlignment="Top"/>
        <DatePicker Name="datePicker1"  Margin="400,235,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="223"/>
        <Label Content="Cargo del Empleado:" HorizontalAlignment="Left" Margin="225,270,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbCargo"  HorizontalAlignment="Left" Margin="400,270,0,0" VerticalAlignment="Top" Width="223">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding nombreCargo}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label Content="Area de Trabajo:" HorizontalAlignment="Left" Margin="225,305,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbArea"  HorizontalAlignment="Left" Margin="400,305,0,0" VerticalAlignment="Top" Width="223" RenderTransformOrigin="0.5,0.5">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding nombreArea}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBox x:Name="txtEstado" TextWrapping="Wrap" Visibility="Hidden" Text="Activo" Margin="401,37,167,64" Grid.Row="1"/>

        <Rectangle Fill="#FFF1EBEC" HorizontalAlignment="Left" Margin="20,108,0,20" Stroke="Black" Width="155"/>
        <Button x:Name="btnGuardar" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="40,120,0,0" VerticalAlignment="Top" Width="110" Height="110" Click="BtnActualizar_Click">
            <StackPanel Height="100" Width="100">
                <Image Source="/Images/disquete.png" Height="70" Width="70"/>
                <Label HorizontalAlignment="Stretch" Content="Actualizar" FontFamily="Segoe UI Emoji" Margin="22,0,15,0"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnVolver" HorizontalAlignment="Left" Margin="40,0,0,30" Width="110" Click="BtnVolver_Click" Background="{x:Null}" BorderBrush="{x:Null}" Height="110" VerticalAlignment="Bottom">
            <StackPanel Height="100" Width="100">
                <Image Source="/FYSIEX;component/Images/regreso.png" Height="70" Width="70" />
                <Label  Content="Volver" FontFamily="Segoe UI Emoji" FontSize="14" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
